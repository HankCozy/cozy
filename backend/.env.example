# Server Configuration
JWT_SECRET="your-secret-key-here-change-in-production"
PORT=3001
NODE_ENV=development

# Supabase Database - Session Pooler (get from Supabase dashboard)
DATABASE_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-X-region.pooler.supabase.com:5432/postgres"

# Supabase Database - Direct Connection (for migrations, usually same as DATABASE_URL)
DIRECT_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-X-region.pooler.supabase.com:5432/postgres"

# Supabase API Credentials (optional, for future features)
SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"

# AssemblyAI - Audio Transcription
# Get your API key from: https://www.assemblyai.com/app/account
ASSEMBLYAI_API_KEY="your-assemblyai-api-key-here"

# Server
PORT=3001
NODE_ENV=development