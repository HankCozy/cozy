# Supabase Database - Direct Connection (for migrations, usually same as DATABASE_URL)
DIRECT_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-X-region.pooler.supabase.com:5432/postgres"

# Supabase API Credentials
SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

